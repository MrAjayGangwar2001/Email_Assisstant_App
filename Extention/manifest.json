{
    "name": "Email Assistant",
    "description": "AI Powered Email Assistant Which will help you to write email as well as reply of any mail",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "action": {
        "default_title": "Email Assistant",
        "default_popup": "hello.html",
        "default_icon": "image.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "*://mail.google.com/*"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "image.png"
            ],
            "matches": [
                "*://mail.google.com/*"
            ]
        }
    ]
}